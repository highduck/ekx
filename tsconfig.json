{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "outDir": "build/ts",
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "ts-node": {
    "transpileOnly": true,
    "skipIgnore": true,
    "esm": true,
    "swc": true
  }
}
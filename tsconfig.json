{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "outDir": "build/ts",
    "lib": ["ESNext", "DOM"]
  },
//  "include": ["./**/*.ts"],
//  "exclude": ["node_modules"]
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "esm": true,
    "swc": true
  }
}
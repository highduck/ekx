{
  "extends": "ts-node/node16/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "outDir": "build/ts",
    "lib": ["es2021"]
  },
//  "include": ["./**/*.ts"],
//  "exclude": ["node_modules"]
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "esm": true,
    "swc": true
  }
}